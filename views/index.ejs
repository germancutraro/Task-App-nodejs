 <% include partials/head %>
 <div class="container">
    <h2 class="mt-5">Task App Node.js - Express & MongoDB</h2>
    <small class="p-1">by germancutraro</small>
    <form id="create-form" class="mt-3">
      <div class="form-group">
        <input type="text" name="task[name]" placeholder="Task Name" class="form-control">
      </div>
      <div class="form-group">
        <input type="text" name="task[description]" placeholder="Add a description" class="form-control">
      </div>
      <div class="form-group">
        <input type="submit" value="Save!" class="btn btn-info">
      </div>
    </form>
    <div class="alert alert-success alertState" role="alert" id="alertState"><span class="h5 create-state"></span></div>
    <table class="table table-hover">
      <thead>
        <tr>
          <th>#</th>
          <th>Name</th>
          <th>Description</th>
          <th>Status</th>
          <th>Operations</th>
        </tr>
      </thead>
      <tbody>
        <%
          let counter = 1;
          tasks.forEach(docs => {
        %>
        <tr>
            <td><%= counter %></td>
            <td><%= docs.name %></td>
            <td><%= docs.description %></td>
            <td class="statusText"><%= docs.status %></td>
            <td>
              <a href="/status/<%= docs._id %>" class="btn btn-info btn-sm changeStatus" data-id="<%= docs._id %>"><%= docs.status ? 'Deshacer' : 'Completar' %></a>
              <a href="/delete/<%= docs._id %>" id="deleteBtn" class="btn btn-danger btn-sm deleteBtn"  data-id="<%= docs._id %>">Delete</a>
            </td>
        </tr>
        <%
          counter++;
          });
        %>
      </tbody>
    </table>
  </div>
 <% include partials/scripts %>
